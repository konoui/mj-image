{
    "name": "@konoui/mjimage",
    "version": "0.0.31",
    "description": "Generates Mahjong tiles in SVG format.",
    "author": "konoui",
    "license": "MIT",
    "repository": "github.com/konoui/mjimage",
    "sideEffects": false,
    "keywords": [
        "mahjong"
    ],
    "publishConfig": {
        "access": "public"
    },
    "scripts": {
        "build": "vite build",
        "test": "vitest run",
        "cmd": "ts-node ./src/cmd/index.ts",
        "prepublishOnly": "rm -rf ./dist && npm run tsc"
    },
    "type": "module",
    "files": [
        "dist/",
        "!**/__tests__/"
    ],
    "exports": {
        ".": {
            "import": {
                "types": "./dist/index.d.ts",
                "default": "./dist/index.js"
            },
            "require": {
                "types": "./dist/index.d.cts",
                "default": "./dist/index.cjs"
            }
        }
    },
    "devDependencies": {
        "@types/js-yaml": "^4.0.9",
        "@types/node": "^22.6.1",
        "@types/svgdom": "^0.1.0",
        "buffer": "^6.0.3",
        "process": "^0.11.10",
        "svg-sprite": "^2.0.2",
        "svgdom": "0.1.14",
        "svgo": "^3.0.2",
        "typescript": "^5.5.4",
        "vite": "^5.4.7",
        "vite-plugin-dts": "^4.2.2",
        "vite-tsconfig-paths": "^5.0.1",
        "vitest": "^2.1.1"
    },
    "dependencies": {
        "@svgdotjs/svg.js": "^3.2.4",
        "eventmit": "^2.0.4",
        "js-yaml": "^4.1.0",
        "valibot": "^0.40.0",
        "xstate": "^5.7.0"
    }
}
