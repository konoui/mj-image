{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "additionalProperties": false,
    "definitions": {
        "WindInput": {
            "additionalProperties": false,
            "properties": {
                "discard": {
                    "type": "string"
                },
                "hand": {
                    "type": "string"
                },
                "score": {
                    "type": "number"
                }
            },
            "required": [
                "discard",
                "hand",
                "score"
            ],
            "type": "object"
        },
        "tableRound": {
            "enum": [
                "1w1",
                "1w2",
                "1w3",
                "1w4",
                "2w1",
                "2w2",
                "2w3",
                "2w4"
            ],
            "type": "string"
        }
    },
    "properties": {
        "1w": {
            "$ref": "#/definitions/WindInput"
        },
        "2w": {
            "$ref": "#/definitions/WindInput"
        },
        "3w": {
            "$ref": "#/definitions/WindInput"
        },
        "4w": {
            "$ref": "#/definitions/WindInput"
        },
        "board": {
            "additionalProperties": false,
            "properties": {
                "doras": {
                    "items": {
                        "type": "string"
                    },
                    "type": "array"
                },
                "front": {
                    "enum": [
                        "1w",
                        "2w",
                        "3w",
                        "4w"
                    ],
                    "type": "string"
                },
                "round": {
                    "$ref": "#/definitions/tableRound"
                },
                "sticks": {
                    "additionalProperties": false,
                    "properties": {
                        "dead": {
                            "type": "number"
                        },
                        "reach": {
                            "type": "number"
                        }
                    },
                    "required": [
                        "dead",
                        "reach"
                    ],
                    "type": "object"
                }
            },
            "required": [
                "doras",
                "round",
                "sticks"
            ],
            "type": "object"
        }
    },
    "required": [
        "1w",
        "2w",
        "3w",
        "4w",
        "board"
    ],
    "type": "object"
}

