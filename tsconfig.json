{
  "compilerOptions": {
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "strict": true,
    "declaration": true,
    "removeComments": true,
    "isolatedModules": true,
    "resolveJsonModule": true
  },
  "transformers": {
    "*.{ts,tsx}": ["@parcel/transformer-typescript-tsc"]
  },
  "include": ["src/**/*", "src/lib/custom.d.ts"]
}
